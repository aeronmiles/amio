{
    "compilerOptions": {
      "target": "es6",
      "allowJs": true,
      "checkJs": true,
      "moduleResolution": "node",
      "alwaysStrict": true,
      "strictNullChecks": false,
      "emitDeclarationOnly": true,
      "declaration": true,
      "outDir": "types",
      "removeComments": false
    },
    "exclude": [
      "bin",
      "obj",
      "node_modules",
      "types"
    ]
  }